<configuration>

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p [%c] \(%t\) %msg%n
      </pattern>
      <charset>utf8</charset>
    </encoder>
  </appender>

  <logger name="org.hibernate.validator" level="WARN" />

  <root level="INFO">
    <appender-ref ref="console" />
  </root>

</configuration>
